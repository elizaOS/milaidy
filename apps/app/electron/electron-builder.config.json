{
  "appId": "com.miladyai.milady",
  "productName": "Milady",
  "directories": {
    "buildResources": "resources"
  },
  "files": [
    "assets/**/*",
    "build/**/*",
    "capacitor.config.*",
    "app/**/*",
    "milady-dist/**/*.js",
    "milady-dist/package.json"
  ],
  "asarUnpack": ["milady-dist/**/*"],
  "publish": {
    "provider": "github",
    "owner": "milady-ai",
    "repo": "milady"
  },
  "nsis": {
    "allowElevation": true,
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  },
  "win": {
    "target": "nsis",
    "icon": "assets/appIcon.ico",
    "azureSignOptions": {
      "endpoint": "https://eus.codesigning.azure.net/",
      "certificateProfileName": "milady-code-sign",
      "codeSigningAccountName": "milady",
      "publisherName": "Milady AI"
    }
  },
  "mac": {
    "category": "public.app-category.productivity",
    "target": ["dmg", "zip"],
    "icon": "assets/appIcon.png",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "entitlements.mac.plist",
    "entitlementsInherit": "entitlements.mac.plist",
    "notarize": true,
    "extendInfo": {
      "NSMicrophoneUsageDescription": "Milady needs microphone access for voice input and speech recognition.",
      "NSCameraUsageDescription": "Milady needs camera access for vision features and video capture.",
      "NSAppleEventsUsageDescription": "Milady uses automation to interact with desktop applications for computer-use features."
    }
  },
  "dmg": {
    "format": "UDZO",
    "background": "assets/dmg-background.png",
    "iconSize": 80,
    "window": {
      "width": 660,
      "height": 400
    },
    "contents": [
      {
        "x": 170,
        "y": 195,
        "type": "file"
      },
      {
        "x": 490,
        "y": 195,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "category": "Utility",
    "icon": "assets/appIcon.png"
  }
}
